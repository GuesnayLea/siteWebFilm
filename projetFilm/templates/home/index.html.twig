{% extends 'base.html.twig' %}

{% block title %}Catalogue de Films{% endblock %}

{% block body %}
<div class="container">

    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-camera-reels"></i> Catalogue de films
            </h1>
            <p class="col-md-8 fs-4">
                Retrouvez une large gamme de film, sélectionné avec amour par nos soins.
            </p>
            <a href="{{ path('app_film_index') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-film"></i> Voir le catalogue
            </a>
        </div>
    </div>

    <!--infos sur ce que permet le site-->
    <div class="row align-items-md-stretch mb-4">
        <div class="col-md-4">
            <div class="h-100 p-5 text-white bg-dark rounded-3">
                <h2><i class="bi bi-search"></i> Recherche facile</h2>
                <p>Trouvez rapidement vos films préférés par genre, année ou titre.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="h-100 p-5 bg-primary text-white rounded-3">
                <h2><i class="bi bi-tags"></i> Tarifs dynamiques</h2>
                <p>Profitez de diverses réductions</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="h-100 p-5 text-white bg-success rounded-3">
                <h2><i class="bi bi-heart"></i> Favoris</h2>
                <p>Enregistrez vos films favoris</p>
            </div>
        </div>
    </div>

    <div class="card text-center mt-4">
        <div class="card-body">
            <h5 class="card-title">Prêt à commencer ?</h5>
            <p class="card-text">Inscrivez-vous pour avoir accès à notre catalogue, louer des films, les ajouter à vos favoris....</p>
            {% if not app.user %}
                <a href="{{ path('app_register') }}" class="btn btn-success me-2">
                    <i class="bi bi-person-plus"></i> S'inscrire
                </a>
                <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Se connecter
                </a>
            {% else %}
                <a href="{{ path('app_film_index') }}" class="btn btn-primary">
                    <i class="bi bi-film"></i> Explorer le catalogue
                </a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}