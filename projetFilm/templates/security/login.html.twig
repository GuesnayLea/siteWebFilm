{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> Connexion</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <!-- CHANGER name="email" en name="_username" -->
                        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <!-- CHANGER name="password" en name="_password" -->
                        <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <!-- Optionnel : case à cocher "Se souvenir de moi" -->
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                        <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary w-100" type="submit">
                        <i class="bi bi-box-arrow-in-right"></i> Se connecter
                    </button>
                </form>
                
                <div class="mt-3 text-center">
                    <a href="{{ path('app_register') }}" class="text-decoration-none">
                        <i class="bi bi-person-plus"></i> Créer un compte
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}