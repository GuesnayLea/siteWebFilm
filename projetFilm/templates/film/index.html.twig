{% extends 'base.html.twig' %}

{% block title %}Catalogue de films{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col">
            <h1><i class="bi bi-collection-play"></i> Catalogue de films</h1>
            <p class="text-muted">Découvrez notre collection de films</p>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Genre</label>
                    <select name="genre" class="form-select">
                        <option value="">Tous les genres</option>
                        {% for genre in genres %}
                            <option value="{{ genre }}" {{ app.request.query.get('genre') == genre ? 'selected' : '' }}>
                                {{ genre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Année</label>
                    <select name="annee" class="form-select">
                        <option value="">Toutes les années</option>
                        {% for annee in annees %}
                            <option value="{{ annee }}" {{ app.request.query.get('annee') == annee ? 'selected' : '' }}>
                                {{ annee }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-funnel"></i> Filtrer
                    </button>
                    <a href="{{ path('app_film_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Réinitialiser
                    </a>
                </div>
                 <div class="col-auto">
                    {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_film_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Ajouter un film
                    </a>
                    {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Connectez-vous pour ajouter un film
                    </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        {% for film in films %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    {% if film.cheminAffiche %}
                        <img src="{{ film.cheminAffiche }}" class="card-img-top" alt="{{ film.titre }}" style="height: 300px; object-fit: cover;">
                    {% else %}
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 300px;">
                            <i class="bi bi-camera-reels" style="font-size: 3rem;"></i>
                        </div>
                    {% endif %}
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ film.titre }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            {{ film.annee }} • {{ film.genre }}
                        </h6>
                        <p class="card-text flex-grow-1">
                            {% if film.synopsis %}
                                {{ film.synopsis|slice(0, 100) }}{% if film.synopsis|length > 100 %}...{% endif %}
                            {% else %}
                                <span class="text-muted">Aucun synopsis disponible</span>
                            {% endif %}
                        </p>
                        
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 text-primary">{{ film.prixLocationParDefaut }} €</span>                            
                                <div class="btn-group">
                                    <a href="{{ path('app_film_show', {'id': film.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>
                                    {% if is_granted('ROLE_USER') %}
                                        <form method="post" action="{{ path('app_cart_add', {'id': film.id}) }}" class="d-inline">
                                            <input type="hidden" name="quantite" value="1">
                                            <button type="submit" class="btn btn-outline-success btn-sm" title="Ajouter au panier">
                                                <i class="bi bi-cart-plus"></i>
                                            </button>
                                        </form>
                                        <form method="post" action="{{ path('app_film_add_favorite', {'id': film.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('add_favorite_' ~ film.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Ajouter aux favoris">
                                                <i class="bi bi-heart"></i> Favori
                                            </button>
                                        </form>
                                        <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Aucun film trouvé.
                </div>
            </div>
        {% endfor %}
    </div>

    {% if films|length > 0 %}
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                {% if app.request.query.get('page', 1) > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': app.request.query.get('page', 1) - 1})) }}">
                            Précédent
                        </a>
                    </li>
                {% endif %}
                
                {% for i in 1..((films|length / 12)|round(0, 'ceil')) %}
                    <li class="page-item {{ app.request.query.get('page', 1) == i ? 'active' : '' }}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': i})) }}">
                            {{ i }}
                        </a>
                    </li>
                {% endfor %}
                
                {% if app.request.query.get('page', 1) < ((films|length / 12)|round(0, 'ceil')) %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': app.request.query.get('page', 1) + 1})) }}">
                            Suivant
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}