{% extends 'base.html.twig' %}

{% block title %}{{ film.titre }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-4">
        {% if film.cheminAffiche %}
            <img src="{{ film.cheminAffiche }}" class="img-fluid rounded shadow" alt="{{ film.titre }}">
        {% else %}
            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow" style="height: 400px;">
                <i class="bi bi-camera-reels" style="font-size: 4rem;"></i>
            </div>
        {% endif %}
    </div>
    
    <div class="col-md-8">
        <h1>{{ film.titre }}</h1>
        <div class="d-flex gap-3 mb-3">
            <span class="badge bg-primary">{{ film.annee }}</span>
            <span class="badge bg-secondary">{{ film.duree }} minutes</span>
            <span class="badge bg-success">{{ film.genre }}</span>
        </div>
        
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Synopsis</h5>
            </div>
            <div class="card-body">
                <p>{{ film.synopsis|nl2br }}</p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-tag"></i> Tarification</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-1"><strong>Prix de base :</strong> {{ film.prixLocationParDefaut|format_currency('EUR') }}</p>
                        <p class="mb-1"><strong>Prix aujourd'hui :</strong> {{ prixDynamique|format_currency('EUR') }}</p>
                        {% if prixDynamique != film.prixLocationParDefaut %}
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-lightning-charge"></i> Promotion spéciale !
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <form method="post" action="{{ path('app_film_delete', {'id': film.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce film ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ film.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
            {% endif %}
            <a href="{{ path('app_film_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour au catalogue
            </a>
        </div>
    </div>
</div>
{% endblock %}