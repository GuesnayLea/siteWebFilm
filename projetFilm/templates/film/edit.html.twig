{% extends 'base.html.twig' %}

{% block title %}Modifier {{ film.titre }}{% endblock %}
<!--page pour modifier les informations d'un film-->
{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning">
                <h4 class="mb-0"><i class="bi bi-pencil"></i> Modifier "{{ film.titre }}"</h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.titre) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.annee) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.duree) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.genre) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.synopsis) }}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.prixLocationParDefaut) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.cheminAffiche) }}
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Mettre Ã  jour
                        </button>
                        <a href="{{ path('app_film_show', {'id': film.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-eye"></i> Voir le film
                        </a>
                        <a href="{{ path('app_film_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Retour au catalogue
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}