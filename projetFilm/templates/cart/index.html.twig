{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1><i class="bi bi-cart"></i> Mon panier</h1>
            <p class="text-muted">Gérez vos locations de films</p>
        </div>
        <div class="col-auto">
            <a href="{{ path('app_film_index') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Ajouter d'autres films
            </a>
        </div>
    </div>
    <!--contenu du panier-->
    {% if panier is not empty %}
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-film"></i> Films dans votre panier</h5>
                    </div>
                    <!--tableau pour contenu du panier-->
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Film</th>
                                        <th>Prix unitaire</th>
                                        <th>Quantité</th>
                                        <th>Total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!--ajout de chaque film qui ont été ajouté avec les informations nécessaire-->
                                    {% for item in panier %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if item.affiche %}
                                                        <img src="{{ item.affiche }}" 
                                                             alt="{{ item.titre }}" 
                                                             class="img-thumbnail me-3" 
                                                             style="width: 60px; height: 80px; object-fit: cover;">
                                                    {% else %}
                                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center me-3" 
                                                             style="width: 60px; height: 80px;">
                                                            <i class="bi bi-camera-reels"></i>
                                                        </div>
                                                    {% endif %}
                                                    <div>
                                                        <h6 class="mb-0">{{ item.titre }}</h6>
                                                        <small class="text-muted">{{ item.annee }} • {{ item.genre }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <span class="text-primary">{{ item.prix_dynamique|format_currency('EUR') }}</span>
                                                {% if item.prix_dynamique != item.prix_base %}
                                                    <br>
                                                    <small class="text-muted">
                                                        <s>{{ item.prix_base|format_currency('EUR') }}</s>
                                                    </small>
                                                {% endif %}
                                            </td>
                                            <td class="align-middle">
                                                <form method="post" action="{{ path('app_cart_update', {'id': item.id}) }}" class="d-inline">
                                                    <div class="input-group input-group-sm" style="width: 120px;">
                                                        <input type="number" 
                                                               name="quantite" 
                                                               value="{{ item.quantite }}" 
                                                               min="1" 
                                                               max="10" 
                                                               class="form-control">
                                                        <button type="submit" class="btn btn-outline-primary">
                                                            <i class="bi bi-arrow-clockwise"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            </td>
                                            <td class="align-middle">
                                                <span class="text-primary fw-bold">
                                                    {{ (item.prix_dynamique * item.quantite)|format_currency('EUR') }}
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <form method="post" 
                                                      action="{{ path('app_cart_remove', {'id': item.id}) }}" 
                                                      onsubmit="return confirm('Retirer ce film du panier ?');">
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <form method="post" action="{{ path('app_cart_clear') }}" onsubmit="return confirm('Vider tout le panier ?');">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Vider le panier
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!--affichage d'un récapitulatif de la commande-->
            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 20px;">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> Récapitulatif</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Nombre de films</span>
                                <span>{{ nombreArticles }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Sous-total</span>
                                <span>{{ totalPanier|format_currency('EUR') }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Durée de location</span>
                                <span>1 semaine</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between fw-bold">
                                <span>Total à payer</span>
                                <span class="h5 text-success">{{ totalPanier|format_currency('EUR') }}</span>
                            </div>
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            Les prix en fonction des réductions.
                        </div>
                        
                        <a href="{{ path('app_cart_checkout') }}" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-credit-card"></i> Procéder au paiement
                        </a>
                        
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="bi bi-shield-check"></i> Paiement 666% sécurisé. Aucune arnaque sur ce site...
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-cart display-1 text-muted"></i>
            <h3 class="mt-3">Votre panier est vide</h3>
            <p class="text-muted">Commencez à ajouter des films à votre panier en explorant le catalogue.</p>
            <a href="{{ path('app_film_index') }}" class="btn btn-primary">
                <i class="bi bi-film"></i> Explorer le catalogue
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}